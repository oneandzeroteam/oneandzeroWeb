                      <h2 class="post-title">
                        <a href="/board/<%= @board.name %>/posts/<%= post.id %>"><%= post.title %></a>
                      </h2>

                      <ul class="meta">
                        <li class="date"><%= post.created_at.getlocal.to_formatted_s(:short) %></li>
                        <li class="categories"><a href="#">Identity</a>, <a href="#">Graphic Design</a></li>
                        <li class="comments"><a href="#"><%= post.comments.count %></a></li>
                        <!--<li class="likes"><a href="#"></a></li>-->
                        <li class="user_name"> <%post.user.name %>
                      </ul><!-- /.meta -->

                      <p><%= truncate(post.content, length: (150...300).to_a.sample, omission: "...#{post.content[-5, 5]}")  %></p>

                      <a href="/board/<%= @board.name %>/posts/<%= post.id %>" class="btn">더 읽기</a>

                    </div><!-- /.post-content -->

                  </div><!-- /.post -->

              <% end %>
            </div><!-- /.posts -->
          </div><!-- /.grid-blog -->

          <a href="/board/<%= @board.name %>/posts/new" class="btn btn-gray">글쓰기</a>
          <%= render :partial => 'layouts/pagination', :locals => {:model => @posts } %>

