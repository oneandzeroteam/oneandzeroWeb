<!-- ============================================================= MAIN ============================================================= -->

<main>

  <!-- ============================================================= SECTION – POPULAR POSTS ============================================================= -->

  <section id="popular-posts" class="light-bg">
    <div class="container inner-top-md">
      <div class="row">
        <div class="col-sm-12">
          <div id="accordion" class="panel-group">
            <div class="panel panel-default">

              <div class="panel-heading">
                <h4 class="panel-title">
                  <a class="panel-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#content">
                    <span>Popular posts</span>
                  </a>
                </h4>
              </div><!-- /.panel-heading -->

              <div id="content" class="panel-collapse collapse">
                <div class="panel-body">
                  <div id="owl-popular-posts" class="owl-carousel owl-item-gap-sm">

                    <% unless @popular_posts.nil? ; @popular_posts.each do |post|; %>
                    <div class="item">
                      <a href="blog-post.html">
                        <figure>
                          <figcaption class="text-overlay">
                            <div class="info">
                              <h4><%= post.title %></h4>
                              <p><%= truncate(post.content, length: 200, omission: "...#{post.content[-5, 5]}")  %></p>
                            </div><!-- /.info -->
                          </figcaption>
                          <img src="<%= post.image_url %>" alt="">
                        </figure>
                      </a>
                    </div><!-- /.item -->
                    <% end; end %>

                  </div><!-- /.owl-carousel -->
                </div><!-- /.panel-body -->
              </div><!-- /.content -->

            </div><!-- /.panel -->
          </div><!-- /.accordion -->
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container -->
  </section>

  <!-- ============================================================= SECTION – POPULAR POSTS : END ============================================================= -->


