<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      New Project
      <small>새로운 프로젝트</small>
    </h1>
    <ol class="breadcrumb">
      <li><i class="fa fa-dashboard"></i>Admin</li>
      <li class="active">New Project</li>
    </ol>
  </section>


  <!-- Main content -->
  <section class="content col-md-4 col-md-offset-3" style="margin-top:100px">

    <% if alert %>
        <div class="alert alert-danger" role="alert"><%= alert %></div>
    <% end %>
    <% if notice %>
        <div class="alert alert-success" role="alert"><%= notice %></div>
    <% end %>


    <%= form_for(@project, :url => url_for(:controller => "admin", :action => "create_project")) do |f| %>

        <div class="row field">
          <div class="col-sm-12">
            <%= f.text_field :title, class: "form-control", placeholder: "이름" %>
          </div><!-- /.col -->
        </div><!-- /.row -->

        <div class="row field">
          <div class="col-sm-12">
            <%= f.text_field :short_description, class: "form-control", placeholder: "한줄 설명" %>
          </div><!-- /.col -->
        </div><!-- /.row -->

        <div class="row">
          <div class="col-sm-12">
            <%= f.text_area :long_description, class: "form-control", placeholder:"설명(README)" %>
          </div><!-- /.col -->
        </div><!-- /.row -->

        <div class="row">
          <div class="col-sm-12">
            <span>진행중인프로젝트?</span>
            <%= f.check_box :is_ongoing %> <!-- 수정요망 -->
          </div><!-- /.col -->
        </div><!-- /.row -->

        <%= f.submit "프로젝트 만들기", class: "btn" %>


    <% end %>
  </section><!-- /.content -->
</div><!-- /.content-wrapper -->

<!-- Main Footer -->
<footer class="main-footer">
  <!-- To the right -->
  <div class="pull-right hidden-xs">
    개발 넘나 힘든것
  </div>
  <!-- Default to the left -->
  <strong>Copyright &copy; 2016 <a href="#">oneandzero</a>.</strong> All rights reserved.
</footer>