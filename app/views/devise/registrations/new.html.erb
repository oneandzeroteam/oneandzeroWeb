<div class="col-md-offset-4 col-md-4" style="margin-top:10%; margin-bottom:10%;">
  <h2>회원가입</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :이메일 %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :비밀번호 %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :비밀번호확인 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :이름 %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :학번 %>
      <div class="f_desc">예) 2014171048</div>
      <%= f.number_field :student_number, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :전공 %>
      <div class="f_desc">예) 국어교육학과</div>
      <%= f.text_field :department_name, class: "form-control" %>
    </div>

    <% semesters = [] ; (2010..Time.now.year).each{ |year| semesters += ["#{year}년 봄학기", "#{year}년 가을학기"]} %>

    <div class="form-group">
      <%= f.label :입회학기 %>
      <%= f.select :entry_semester, semesters %>
    </div>


    <div class="form-group">
      <%= f.label :카카오톡ID %>
      <%= f.text_field :kakaotalkid, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "회원가입" , class: "btn" %>
    </div>
  <% end %>

  <div class=""><%= render "devise/shared/links" %></div>
</div>