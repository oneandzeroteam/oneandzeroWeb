<main class="container-fluid" style="height:1300px" >
  <div class="col-md-4 col-md-offset-3" style="margin-top:100px">
  <h2>회원가입</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :이메일 %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :비밀번호 %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :비밀번호확인 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :이름 %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :학번 %>
      <div class="f_desc">예) 2014171048</div>
      <%= f.number_field :student_number, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :전공 %>
      <div class="f_desc">예) 국어교육학과</div>
      <%= f.text_field :department_name, class: "form-control" %>
    </div>

    <% semesters = [] ; (2010..Time.now.year).each{ |year| semesters += ["#{year}년 봄학기", "#{year}년 가을학기"]} %>

    <div class="form-group">
      <%= f.label :입회학기 %>
      <%= f.select :entry_semester, semesters %>
    </div>


    <div class="form-group">
      <%= f.label :카카오톡ID %>
      <%= f.text_field :kakaotalkid, class: "form-control" %>
    </div>

      <%= flash[:recaptcha_error] %>
    <div class="recaptcha">
      <%= recaptcha_tags %>
    </div>

    <p><i>회원가입을 누르시면 <a href="/pages/policy">개인정보처리방침</a>에 동의하는 걸로 간주돱니다</i></p>
    <div class="actions">
      <%= f.submit "회원가입" , class: "btn" %>
    </div>
  <% end %>


  <a href="/pages/policy">개인정보처리방침</a>

  <div class=""><%= render "devise/shared/links" %></div>
  </div>
 </main>